@using Booking.DAL.Models
@model IEnumerable<Booking.DAL.Models.Apartment>

@{
    ViewData["Title"] = "Apartment";
}

<h3 class="text-center mt-5 mb-4 font-weight-bold title-small">My Apartments</h3>

<p>
    <a class="font-weight-bold" asp-area="HosterArea" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hoster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvgScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxDurationInDays)
            </th>
            <th>
                Features
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Apartment item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoster.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvgScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxDurationInDays) days
                </td>
                <td>
                    @foreach (var feature in item.Features)
                    {
                        @feature.Name <br />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    <partial name="Partials/_GroupButtonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>
