@model Booking.Areas.Admin.ViewModels.AdminHomeIndexVM

@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="mt-3 font-weight-bold text-center">Admin Panel</h3>
        </div>
    </div>
    <div class="row mt-3 pt-3" style="background-color: #eeeeee">
        <div class="col-md-4">
            <div class="card-group">
                <div class="card mb-4">
                    <div class="card-body logo2-body">
                        <h6 class="card-title">Rents:</h6>
                        <p class="card-text green-text"><i class="fas fa-angle-double-up fa-2x"></i><span class="ml-2" style="font-size: 30px;">@Model.Rents.Count</span></p>
                        <img src="~/img/3d-house.svg" alt="booking.png" class="logo2" />

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-group">
                <div class="card mb-4">
                    <div class="card-body logo2-body">
                        <h6 class="card-title">Hosters:</h6>
                        <p class="card-text blue-text"><span class="ml-2" style="font-size: 30px;">@Model.Hosters</span></p>
                        <img src="~/img/3d-house.svg" alt="booking.png" class="logo2" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-group">
                <div class="card mb-4">
                    <div class="card-body logo2-body">
                        <h6 class="card-title">Explorers: <i class="fi-parameters-iconname"></i></h6>
                        <p class="card-text green-text"><i class="fi-parameters-iconname"></i><span class="ml-2" style="font-size: 30px;">@Model.Explorers</span></p>
                        <img src="~/img/3d-house.svg" alt="booking.png" class="logo2" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-group">
                <div class="card mb-4">
                    <div class="card-body logo2-body">
                        <h6 class="card-title">Apartments:</h6>
                        <p class="card-text green-text"><i class="fas fa-angle-double-up fa-2x"></i><span class="ml-2" style="font-size: 30px;">@Model.Apartments</span></p>
                        <img src="~/img/3d-house.svg" alt="booking.png" class="logo2" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-group">
                <div class="card mb-4">
                    <div class="card-body logo2-body">
                        <h6 class="card-title">Features:</h6>
                        <p class="card-text green-text"><i class="fas fa-angle-double-up fa-2x"></i><span class="ml-2" style="font-size: 30px;">@Model.Features</span></p>
                        <img src="~/img/3d-house.svg" alt="booking.png" class="logo2" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-group">
                <div class="card mb-4">
                    <div class="card-body logo2-body">
                        <h6 class="card-title">Locations:</h6>
                        <p class="card-text green-text"><i class="fas fa-angle-double-up fa-2x"></i><span class="ml-2" style="font-size: 30px;">@Model.Locations</span></p>
                        <img src="~/img/3d-house.svg" alt="booking.png" class="logo2" />

                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="text-center mt-5 mb-4 font-weight-bold">Rents</h3>

    <table class="table table-striped mb-5">
        <thead>
            <tr>
                <th>
                    Explorer
                </th>
                <th>
                    Apartment
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rents[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rents[0].EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rents[0].State)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Rents)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Explorer.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apartment.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>